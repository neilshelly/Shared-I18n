{
  "name": "shared-i18n",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./locales/*": "./src/locales/*"
  },
  "files": [
    "dist/",
    "src/locales/"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "gen": "tsx scripts/generate-translation-keys.ts",
    "validate": "tsx scripts/validate-locales.ts",
    "build": "npm run gen && tsc",
    "test": "npm run gen && npm run validate && vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run test && npm run build",
    "ci": "npm test && npm run build"
  },
  "devDependencies": {
    "@types/node": "^20.19.34",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^1.6.1"
  },
  "engines": {
    "node": ">=20"
  }
}
